    <script>
        // L√≥gica para os bot√µes de rea√ß√£o
        const reactionButtons = document.querySelectorAll('.reaction-btn');
        reactionButtons.forEach(button => {
            button.addEventListener('click', () => {
                const countSpan = button.querySelector('span[data-count]');
                let currentCount = parseInt(countSpan.getAttribute('data-count'), 10);
                currentCount++;
                countSpan.setAttribute('data-count', currentCount);
                countSpan.textContent = currentCount;

                // Desativa o bot√£o ap√≥s o clique para evitar m√∫ltiplos votos
                button.disabled = true;
                button.classList.add('opacity-50', 'cursor-not-allowed');
            });
        });

        // L√≥gica para o bot√£o de compartilhar
        const shareButton = document.getElementById('shareButton');
        shareButton.addEventListener('click', () => {
            const pageUrl = window.location.href;
            const tempInput = document.createElement('textarea');
            tempInput.value = pageUrl;
            document.body.appendChild(tempInput);
            tempInput.select();
            
            try {
                document.execCommand('copy');
                // Altera o texto do bot√£o para dar feedback ao usu√°rio
                const originalText = shareButton.innerHTML;
                shareButton.innerHTML = 'Link copiado!';
                setTimeout(() => {
                    shareButton.innerHTML = originalText;
                }, 2000); // Retorna ao texto original ap√≥s 2 segundos
            } catch (err) {
                console.error('Falha ao copiar o link: ', err);
                // Poderia exibir uma mensagem de erro aqui
            }

            document.body.removeChild(tempInput);
        });
    </script>
